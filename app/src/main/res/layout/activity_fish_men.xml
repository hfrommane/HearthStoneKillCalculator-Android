<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="请输入坟场鱼人："
        android:textColor="@color/baseBlack"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="118dp"
            android:background="@drawable/fish_bluegill_warrior" />

        <Button
            android:id="@+id/bluegill_warrior_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/baseBlack"
            android:text="-"
            android:textColor="@color/baseWhite"
            android:textSize="30dp"></Button>

        <TextView
            android:id="@+id/bluegill_warrior_tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="24dp"></TextView>

        <Button
            android:id="@+id/bluegill_warrior_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/baseBlack"
            android:text="+"
            android:textColor="@color/baseWhite"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="118dp"
            android:background="@drawable/fish_murloc_warleader" />

        <Button
            android:id="@+id/murloc_warleader_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/baseBlack"
            android:text="-"
            android:textColor="@color/baseWhite"
            android:textSize="30dp"></Button>

        <TextView
            android:id="@+id/murloc_warleader_tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="24dp"></TextView>

        <Button
            android:id="@+id/murloc_warleader_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/baseBlack"
            android:text="+"
            android:textColor="@color/baseWhite"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="118dp"
            android:background="@drawable/fish_old_murk_eye" />

        <Button
            android:id="@+id/old_murk_eye_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@color/baseBlack"
            android:text="-"
            android:textColor="@color/baseWhite"
            android:textSize="30dp"></Button>

        <TextView
            android:id="@+id/old_murk_eye_tv"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0"
            android:textSize="24dp"></TextView>

        <Button
            android:id="@+id/old_murk_eye_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/baseBlack"
            android:text="+"
            android:textColor="@color/baseWhite"
            android:textSize="30dp"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/calculator"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/baseBlack"
        android:text="立即计算"
        android:textColor="@color/baseWhite" />

</LinearLayout>